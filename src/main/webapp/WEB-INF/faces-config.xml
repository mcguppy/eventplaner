<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <locale-config>
        </locale-config>
        <resource-bundle>
            <base-name>Labels</base-name>
            <var>labels</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>Messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>Settings</base-name>
            <var>settings</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/pages/staffMember/staffMemberCreate.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>saved</from-outcome>
            <to-view-id>/pages/staffMember/staffMemberList.xhtml</to-view-id>
            <redirect include-view-params="true" />
        </navigation-case>
        <navigation-case>
            <from-outcome>cancelled</from-outcome>
            <to-view-id>/pages/staffMember/staffMemberList.xhtml</to-view-id>
            <redirect include-view-params="true" />
        </navigation-case>
    </navigation-rule>

</faces-config>
